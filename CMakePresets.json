{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/installed"
            }
        },
        {
            "name": "msvc-release",
            "inherits": "base",
            "generator": "Ninja",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_BUILD_TYPE": "Release",
                "CPACK_GENERATOR": "ZIP;WIX"
            }
        },
        {
            "name": "gcc-release-x64",
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc-9",
                "CMAKE_CXX_COMPILER": "g++-9",
                "CMAKE_BUILD_TYPE": "Release",
                "CPACK_GENERATOR": "DEB;TGZ"
            }
        },
        {
            "name": "gcc-release-arm64",
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "aarch64-linux-gnu-gcc",
                "CMAKE_CXX_COMPILER": "aarch64-linux-gnu-g++",
                "CMAKE_BUILD_TYPE": "Release",
                "CPACK_GENERATOR": "DEB;TGZ",
                "TARGET_ARCH": "arm64"
            }
        }
    ]
}